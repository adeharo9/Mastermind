<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="400.0" styleClass="background" stylesheets="@../styles/monokai.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.controllers.RankingViewController">
   <children>
      <ToolBar prefHeight="40.0" prefWidth="200.0" styleClass="toolbar">
        <items>
          <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonAction" text="Back" />
        </items>
      </ToolBar>
      <ScrollPane fitToHeight="true" fitToWidth="true" prefWidth="400.0" styleClass="scroll-bar" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="rankingVBox" alignment="CENTER" spacing="30.0" styleClass="background">
               <children>
                  <HBox>
                     <children>
                        <Label styleClass="text" text="High scores:" />
                     </children>
                  </HBox>
                  <GridPane fx:id="rankingGridPane" hgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                  </GridPane>
               </children>
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</VBox>
