<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="99.0" prefWidth="250.0" styleClass="background" stylesheets="@../styles/monokai.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.controllers.SaveGameViewController">
   <children>
      <VBox spacing="5.0">
         <children>
            <Label layoutX="14.0" layoutY="6.0" prefHeight="17.0" prefWidth="185.0" styleClass="text" text="Enter a name for this game:" />
            <TextField fx:id="gameIdTextField" layoutX="14.0" layoutY="26.0" prefHeight="24.0" prefWidth="228.0" promptText="Game Name" />
            <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="8.0" prefWidth="220.0" />
         </children>
      </VBox>
      <HBox alignment="CENTER" layoutX="50.0" layoutY="61.0">
         <children>
            <Button minWidth="60.0" mnemonicParsing="false" onAction="#saveButtonAction" text="Save" />
            <Separator prefWidth="30.0" visible="false" />
            <Button minWidth="60.0" mnemonicParsing="false" onAction="#backButtonAction" text="Back" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>
